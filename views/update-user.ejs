<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/tailwind.css" />
    <script
      src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.js"
      defer
    ></script>
  </head>

  <body class="antialiased bg-gray-200">
    <div class="mx-auto px-2 max-w-xl">
    
      <form class="mt-10 p-6 bg-white rounded shadow-xl" action="/update-user" method="POST">
        <div class="flex justify-center">
          <div class="logo h-12 w-12 rounded-full border border-blue-400 p-2">
            <img src="/image/logo.png" alt="pfe logo" />
          </div>
        </div>
        <% if (locals.msg) { %>
          <span style="color: red;"><%= msg %> </span>
         <% } %>
        <div class="mt-2">
          <label class="block text-sm text-gray-00" for="">Nom</label>
          <input
            class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded"
            id="nom"
            name="nom"
            type="text"
            aria-label="Nom"
            required
          />
        </div>
        <div class="mt-2">
          <label class="block text-sm text-gray-00" for="">Prénom</label>
          <input
            class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded"
            id="prénom"
            name="prenom"
            type="text"
            aria-label="Prénom"
            required
          />
        </div>
       

        <div class="mt-2">
          <label class="block text-sm" for="">Mot de passe</label>
          <input
            class="w-full px-5 py-2 text-gray-700 bg-gray-200 rounded"
            id=""
            name="password"
            type="password"
            aria-label="Password"
            required
          />
        </div>
        <div class="mt-2">
          <label class="block text-sm" for="">Noveau Mot de passe</label>
          <input
            class="w-full px-5 py-2 text-gray-700 bg-gray-200 rounded"
            id=""
            name="npassword"
            type="password"
            aria-label=""
            required
          />
        </div>
        <label class="inline-flex items-center mt-3">
          <input
            type="radio"
            class="form-checkbox h-5 w-5 text-blue-600"
            value="male"
            name="sex"
            checked
          /><span class="ml-2 text-gray-700">Homme</span>
        </label>

        <label class="inline-flex items-center mt-3 ml-2">
          <input
            type="radio"
            class="form-checkbox h-5 w-5 text-pink-400"
            value="female"
            name="sex"
            checked
          /><span class="ml-2 text-gray-700">Femme</span>
        </label>
        <div class="mt-4 flex justify-evenly">
          <a
            href="/settings"
            class="px-4 py-1 text-white font-semibold tracking-wider bg-gray-600 rounded"
            type="submit"
          >
            Annuler
          </a>
          <button
            class="px-4 py-1 text-white font-semibold tracking-wider bg-blue-400 rounded shadow-lg"
            type="submit"
          >
            Confirmer
          </button>
        </div>
      </form>
    </div>
  </body>
</html>